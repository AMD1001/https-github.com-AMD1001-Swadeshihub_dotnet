@using SaleCRMApp.Models
@model State

@{
    ViewData["Title"] = "Edit State";
}

<h2>Edit State</h2>

<form asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="StateName">State Name</label>
        <input asp-for="StateName" class="form-control" />
        <span asp-validation-for="StateName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StateDescription">State Description</label>
        <textarea asp-for="StateDescription" class="form-control"></textarea>
        <span asp-validation-for="StateDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StateImageFile">State Image</label>
        <input asp-for="StateImageFile" type="file" class="form-control" />
        <span asp-validation-for="StateImageFile" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Current State Image</label>
        @if (Model.StateImage != null)
        {
            <img src="data:image/png;base64,@Convert.ToBase64String(Model.StateImage)" alt="Current State Image" style="max-width: 100px; max-height: 100px;" />
        }
        else
        {
            <p>No Image</p>
        }
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
