@model IEnumerable<SwadeshiApp.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<style>
    /* Neumorphism effect for table */
    .table-container {
        margin-top: 20px;
        background-color: #f0f0f0;
        padding: 20px;
        border-radius: 20px;
        box-shadow: 5px 5px 10px #bcbcbc, -5px -5px 10px #ffffff;
    }

        .table-container table {
            width: 100%;
            border-collapse: collapse;
        }

        .table-container th,
        .table-container td {
            padding: 8px;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }

        .table-container th {
            background-color: #4CAF50;
            color: white;
        }

        .table-container tr:hover {
            background-color: #f2f2f2;
        }
</style>

<h1>Product List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-3d">Create New</a>
</p>

<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Unit Price</th>
                <th>State Name</th>
                <th>Discount</th>
                <th>Units In Stock</th>
                <th>Product Available</th>
                <th>Short Description</th>
                <th>Picture</th>
                <th>Note</th>
                <th>Category Name</th>
                <th>Subcategory Name</th>
                <th>Supplier ID</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.UnitPrice)</td>
                    <td>@Html.DisplayFor(modelItem => item.StateName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Discount)</td>
                    <td>@Html.DisplayFor(modelItem => item.UnitInStock)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProductAvailable)</td>
                    <td>@Html.DisplayFor(modelItem => item.ShortDescription)</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.PicturePath))
                        {
                            <img src="@Url.Content(item.PicturePath)" alt="product Image" style="max-width: 100px; max-height: 100px;" />
                        }
                        else
                        {
                            <p>No Image</p>
                        }
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Note)</td>
                    <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                    <td>@Html.DisplayFor(modelItem => item.SubCategoryName)</td>
                    <td>@Html.DisplayFor(modelItem => item.SupplierID)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProductID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ProductID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ProductID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
