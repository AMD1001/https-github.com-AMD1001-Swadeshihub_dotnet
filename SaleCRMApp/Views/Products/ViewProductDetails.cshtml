@model SwadeshiApp.Models.Product

@{
    ViewBag.Title = "Product Details";

}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.PicturePath" alt="@Model.Name" class="img-fluid" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p><strong>Product ID:</strong> @Model.ProductID</p>
            <p><strong>Supplier:</strong> @Model.SupplierID</p>
            <p><strong>Unit Price:</strong> Rs.@Model.UnitPrice</p>
            @if (Model.OldPrice != null)
            {
                <p><strong>Previous Price:</strong> Rs.@Model.OldPrice</p>
            }
            @if (Model.Discount != null)
            {
                <p><strong>Discount:</strong> @Model.Discount%</p>
            }
            <p><strong>Stock:</strong> @Model.UnitInStock units</p>
            <p><strong>Available:</strong> @(Model.ProductAvailable == true ? "Yes" : "No")</p>
            <p><strong>Description:</strong> @Model.ShortDescription</p>
            <p><strong>Note:</strong> @Model.Note</p>
            <p><strong>State Name:</strong> @Model.StateName</p>
            <p><strong>Category Name:</strong> @Model.CategoryName</p>
            <p><strong>Subcategory Name:</strong> @Model.SubCategoryName</p>
            <div>
                @if (Model.ProductAvailable == true)
                {
                    <a href="@Url.Action("Index", "Payment", new { ProductId = @Model.ProductID, TotalAmount = @Model.UnitPrice })" class="btn btn-success" style="border-radius:10px;">Buy Now</a>
                    <a href="@Url.Action("AddToCart","Cart",new { @ProductID = @Model.ProductID})" class="btn btn-primary" style="margin-right:20px;border-radius:10px;">Add to Cart</a>
                }
                else
                {
                    <button type="button" class="btn btn-success" disabled>Buy Now</button>
                    <button type="button" class="btn btn-primary" disabled>Add to Cart</button>
                }
            </div>
        </div>
    </div>
</div>
