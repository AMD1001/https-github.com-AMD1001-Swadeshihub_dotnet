
@model SwadeshiApp.Models.IndexViewModel

<div class="row">
    <div class="col-md-4">
        <form id="paymentForm" method="post">
            <div class="form-group">
                <label>Payment Method:</label><br />
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="paymentMethod" id="cashOnDelivery" value="cash">
                    <label class="form-check-label" for="cashOnDelivery">Cash on Delivery</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="paymentMethod" id="payOnline" value="online">
                    <label class="form-check-label" for="payOnline">Pay Online</label>
                </div>
            </div>

            <div id="cashOnDeliveryForm" style="display: none;">
                <!-- Form fields for Cash on Delivery -->
                <div class="form-group">
                    <label asp-for="UserDetail.FirstName">First Name</label>
                    <input asp-for="UserDetail.FirstName" class="form-control" name="FirstName" />
                </div>

                <div class="form-group">
                    <label asp-for="UserDetail.LastName">Last Name</label>
                    <input asp-for="UserDetail.LastName" class="form-control" name="LastName" />
                </div>

                <div class="form-group">
                    <label asp-for="UserDetail.MobileNo">Mobile Number</label>
                    <input asp-for="UserDetail.MobileNo" class="form-control" name="MobileNo" />
                </div>

                <div class="form-group">
                    <label asp-for="UserDetail.Email">Email</label>
                    <input asp-for="UserDetail.Email" class="form-control" name="Email" />
                </div>

                <div class="form-group">
                    <label asp-for="OrderDetails.TotalAmount">Total Amount</label>
                    <input asp-for="OrderDetails.TotalAmount" class="form-control" name="TotalAmount" />
                </div>

                <div class="form-group">
                    <label asp-for="OrderDetails.Address">Address</label>
                    <input asp-for="OrderDetails.Address" class="form-control" name="Address" />
                </div>

                <div class="form-group">
                    <label asp-for="OrderDetails.City">City</label>
                    <input asp-for="OrderDetails.City" class="form-control" name="City" />
                </div>

                <div class="form-group">
                    <label asp-for="OrderDetails.PinCode">Pin Code</label>
                    <input asp-for="OrderDetails.PinCode" class="form-control" name="PinCode" />
                </div>

                <input type="hidden" asp-for="OrderDetails.UserId" name="UserId" />
                <input type="hidden" asp-for="OrderDetails.ProductId" name="ProductId" />
                <!-- Include other fields for Cash on Delivery as needed -->

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit Cash on Delivery</button>
                </div>
            </div>

            <div id="payOnlineForm" style="display: none;">
                <!-- Form fields for Pay Online -->
                <div class="form-group">
                    <label asp-for="UserDetail.FirstName">First Name</label>
                    <input asp-for="UserDetail.FirstName" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="UserDetail.LastName">Last Name</label>
                    <input asp-for="UserDetail.LastName" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="UserDetail.MobileNo">Mobile Number</label>
                    <input asp-for="UserDetail.MobileNo" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="UserDetail.Email">User ID</label>
                    <input asp-for="UserDetail.Email" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="OrderDetails.TotalAmount">Total Amount</label>
                    <input asp-for="OrderDetails.TotalAmount" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="OrderDetails.Address">Address</label>
                    <input asp-for="OrderDetails.Address" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="OrderDetails.City">City</label>
                    <input asp-for="OrderDetails.City" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="OrderDetails.PinCode">Pin Code</label>
                    <input asp-for="OrderDetails.PinCode" class="form-control" />
                </div>

                <input type="hidden" asp-for="OrderDetails.UserId" />
                <input type="hidden" asp-for="OrderDetails.ProductId" />

                <!-- Include other fields for Pay Online as needed -->

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit Pay Online</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('input[type="radio"]').click(function () {
                if ($(this).attr('id') == 'cashOnDelivery') {
                    $('#cashOnDeliveryForm').show();
                    $('#payOnlineForm').hide();
                    $('#paymentForm').attr('action', '@Url.Action("createCOD", "Order")');
                } else if ($(this).attr('id') == 'payOnline') {
                    $('#cashOnDeliveryForm').hide();
                    $('#payOnlineForm').show();
                    $('#paymentForm').attr('action', '@Url.Action("initiateOrder", "Payment")');
                }
            });
        });
    </script>
}


