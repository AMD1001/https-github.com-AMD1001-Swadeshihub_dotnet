@using SwadeshiApp.Models
@model List<Product>

<style>
    .card {
        transition: transform 0.2s;
        text-align: center; /* Center-align content */
    }

    .card:hover {
        transform: scale(1.05);
    }

    .card-img-top {
        transition: transform 0.2s;
    }

    .card:hover .card-img-top {
        transform: scale(1.2);
    }

    /* Add hover effect to product cards */
    .product-card {
        transition: transform 0.2s;
    }

    .product-card:hover {
        transform: translateY(-5px);
    }
    .btn-3d {
        box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2); /* Add a shadow */
        transition: all 0.3s ease; /* Add transition for smooth effect */
    }

        .btn-3d:hover {
            transform: translateY(-2px); /* Move button up slightly on hover */
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.3); /* Increase shadow on hover */
        }
</style>

<br>

<div class="container-fluid">
    <div class="row">
        @foreach (var product in Model)
        {
                <div class="col-md-4">
                    <div class="card product-card mb-4" style="height: 400px; overflow: hidden;">
                        <div class="card-img-top" style="height: 200px; padding-top: 20px; overflow: hidden;">
                            <img src="@product.PicturePath" class="img-fluid" alt="@product.Name" style="height: 100%; object-fit: cover;">
                        </div>
                        <div class="card-body">
                            <h3 class="card-title">@product.Name</h3>
                            <p class="card-text" overflow: hidden;">@product.ShortDescription</p>
                            <h5 class="card-title">@product.UnitPrice</h5>
                            <div class="btn-group btn-3d">
                                <a href="@Url.Action("AddToCart","Cart",new { @ProductID = product.ProductID})" class="btn btn-primary" style="margin-right:20px;border-radius:10px;">Add to Cart</a>
                              
                            <a href="@Url.Action("ViewProduct", "Products", new { ProductId = product.ProductID })" class="btn btn-success" style="border-radius:10px;">View</a>
                            </div>
                        </div>
                    </div>
                </div>
        }
    </div>
</div>
