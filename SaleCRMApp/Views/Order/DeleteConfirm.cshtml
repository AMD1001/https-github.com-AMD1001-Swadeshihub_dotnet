@model SwadeshiApp.Models.OrderItem

@{
    ViewData["Title"] = "Confirm Order Deletion";
}

<h1>Confirm Order Deletion</h1>

<div>
    <h4>Order details:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Order ID:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderId)
           
        </dd>
        <dt class="col-sm-2">
            Product Name:
        </dt>
        <dd class="col-sm-10">
            
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="OrderId" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="OrdersByUserId" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
