@model SwadeshiApp.Models.OrderItem

@{
    ViewData["Title"] = "Order Details";
}

<style>
    .order-details-container {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    .order-info,
    .product-info {
        flex: 0 0 48%;
        padding: 20px;
        border: 1px solid #dee2e6;
        border-radius: 5px;
        background-color: #f8f9fa;
    }

    .product-image {
        width: 100%;
        max-width: 300px;
        height: auto;
        margin-bottom: 20px;
    }

    .product-info p {
        margin-bottom: 10px;
    }

    .order-info p {
        margin-bottom: 5px;
    }
</style>

<h1 class="mt-4">Order Details</h1>

<div class="row">
    <div class="col-md-6">
        <div class="order-info">
            <h2>Order Information</h2>
            <p><strong>Order ID:</strong> @Model.OrderId</p>
            <p><strong>Supplier ID:</strong> @Model.SupplierId</p>
            <p><strong>First Name:</strong> @Model.FirstName</p>
            <p><strong>Last Name:</strong> @Model.LastName</p>
            <p><strong>Mobile No:</strong> @Model.MobileNo</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Address:</strong> @Model.Address</p>
            <p><strong>City:</strong> @Model.City</p>
            <p><strong>Pin Code:</strong> @Model.PinCode</p>
            <p><strong>Total Amount:</strong> @Model.TotalAmount</p>
            <p><strong>Payment Mode:</strong> @Model.PaymentMode</p>
            <p><strong>Payment ID:</strong> @Model.PaymentId</p>
            <p><strong>Order Date:</strong> @Model.OrderDate</p>
            <p><strong>Shipping Date:</strong> @Model.ShippingDate</p>
            <p><strong>Delivery Date:</strong> @Model.DeliveryDate</p>
            <p><strong>Order Status:</strong> @Model.OrderStatus</p>
            @if (Model.OrderStatus == "Ordered")
            {
                <a href="/Order/OrderShipement?orderId=@Model.OrderId" class="btn btn-primary">Shipped</a>
                <a href="/Order/NewOrderBySellerId" class="btn btn-secondary">Back</a>
            }
            else if (Model.OrderStatus == "Shipped")
            {
                <a href="/Order/OrderDeliverd?orderId=@Model.OrderId" class="btn btn-success">Delivered</a>
                <a href="/Order/ShippedOrderBySellerId" class="btn btn-secondary">Back</a>
                
            }
            else if (Model.OrderStatus == "Delivered")
            {
                <a href="/Order/DeliveredOrderBySellerId" class="btn btn-secondary">Back</a>
                
            }
            
        </div>
    </div>
    <div class="col-md-6">
        <div class="product-info">
            <h2>Product Information</h2>
            <img src="@Model.Product.PicturePath" alt="Product Image" class="product-image">
            <p><strong>Product ID:</strong> @Model.Product.ProductID</p>
            <p><strong>Product Name:</strong> @Model.Product.Name</p>
            <p><strong>Unit Price:</strong> @Model.Product.UnitPrice</p>
            <p><strong>Short Description:</strong> @Model.Product.ShortDescription</p>
            <p><strong>State Name:</strong> @Model.Product.StateName</p>
            <p><strong>Category Name:</strong> @Model.Product.CategoryName</p>
            <p><strong>Subcategory Name:</strong> @Model.Product.SubCategoryName</p>
        </div>
    </div>
</div>
